<ul>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  <% end %>
</ul>


<div class="container">
  <div class="text-center row">

    <div class="col">
			<div class="padding">
				<div class="logo-container">
					<img src="https://scontent-lga3-1.cdninstagram.com/t51.2885-15/e35/20583168_108299806540330_8006561059768893440_n.jpg" alt="logo" style="opacity: 0.9;">
				</div>
			</div>
		</div>

    <div class="col">
      <div class="col-6 text-nowrap">

        <h2 class = "form-signin-heading" style = "padding: 10px;"> Create a Cuddlegram Account </h2>

        <%= form_for @user do |f|  %>
        <div class="form-group">
          <%= f.text_field :first_name, :placeholder => "first name" %>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, :placeholder => "last name" %>
        </div>
        <div class="form-group">
          <%= f.text_field :instagram_handle, :placeholder => "instagram handle" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, :placeholder => "email address" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => "password" %>
        </div>
        <div class="form-group">
          <%= f.submit "Sign Up", class:"btn btn-info" %>
        </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
