<%= flash[:notice] %>

<div class="login">
	<div class="container">
		<div class="form">
			<div class="padding">

      <h1>Log in</h1>

      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, :placeholder => "Email" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
			</div>
    </div>
	</div>
</div>
