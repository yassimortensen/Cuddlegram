<h1> <%= @pet.instagram_handle %> <h1>

<%= form_for :like, url: likes_path do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :pet_id, value: @pet.id %>
  <%= f.submit "Cuddle?" %>
<% end %>

<h3>Cuddlegram Followers:</h3>
  <% @pet.users.each do |follower| %>
    <ul>
      <li><%= link_to follower.instagram_handle, user_path(follower) %></li>
    </ul>
  <% end %>

<h4>To see <%=@pet.instagram_handle%>'s instagram feed, click <a href="https://www.instagram.com/<%=@pet.instagram_handle%>">here!</a></h4>

<% @pet.photos.each do |photo| %>
  <%= link_to image_tag(photo.url), photo_path(photo) %>
<% end %>
