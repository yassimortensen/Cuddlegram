<div class="padding">
  <h2 class="text-center">
    <%= link_to @photo.pet.instagram_handle, pet_path(@photo.pet) %>
  </h2>
</div>

<div class="center-content">
  <div class="media">
    <img src="<%= @photo.url%>" style="height: auto; width: 400px; padding: 10px 10px;">

    <div class="padding">

        <br><h5 style= "padding-left: 7px;">Add a Comment</h5>

        <%= form_for :comment, url: comments_path do |f| %>
        <%= f.text_area :content, class: "textarea-new" %>
        <%= f.hidden_field :photo_id, value: @photo.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <br>
        <div style= "padding-left: 17px;"><%= f.submit "Add a Comment", class: "btn btn-info" %></div>
        <% end %>
        <br>

        <h5>Comments</h5>

        <%@photo.comments.each do |comment| %>
          <div class= "comment"><%= link_to comment.user.instagram_handle, user_path(comment.user)%> says "<%= comment.content %>" </div>

        <% end %>
      </div>
  </div>
</div>
