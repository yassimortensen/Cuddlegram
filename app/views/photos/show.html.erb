<h1> test photo show page </h1>
<img src="<%= @photo.url %>">



<h1> New Comment </h1>

  <%= form_for :comment, url: comments_path do |f| %>
    <%= f.text_area :content %>
    <%= f.hidden_field :photo_id, value: @photo.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Add a Comment" %>
  <% end %>

Comments:
  <%@photo.comments.each do |comment| %>
  <%= comment.content %>
  <% end %>
